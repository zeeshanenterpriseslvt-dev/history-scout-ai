name: Build dist and upload artifact
on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "18"
          cache: "npm"

      - name: Install deps
        run: npm ci

      - name: Build production
        run: npm run build

      - name: Zip dist folder
        run: |
          if [ -d ./dist ]; then
            cd dist
            zip -r ../dist.zip .
            cd ..
          else
            echo "dist folder not found" >&2
            exit 1
          fi

      - name: Upload dist.zip artifact
        uses: actions/upload-artifact@v4
        with:
          name: dist-zip
          path: dist.zip
